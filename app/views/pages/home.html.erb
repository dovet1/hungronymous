<div id="home-video-wrapper">
  <%= video_tag "restaurant.mp4", autoplay: true, loop: true, mute: true, id: "home-video" %>
  <div>
    <h1 id="home">Hungronymous</h1>
  </div>
  <div>
    <h4 id="home">Probably the best food critic in the world</h4>
  </div>
  <div>
    <a class="btn btn-primary" href="restaurants#index" role="button">Enter</a>
  </div>
</div>

<!-- <div class="featured-restaurants"> -->
  <h1>Recently reviewed restaurants</h1>
  <% @three_restaurants.each do |restaurant| %>
    <div class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item">
          <%= image_tag "https://picsum.photos/id/310/200/300" %>
          <div class="carousel-caption d-none d-md-block">
            <h5><%= restaurant.name %></h5>
            <p><%= restaurant.review %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
